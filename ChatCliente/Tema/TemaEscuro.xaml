<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- CORES DO MODO ESCURO -->
    <SolidColorBrush x:Key="BgColor" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="TextColor" Color="White"/>
    <SolidColorBrush x:Key="BoxBgColor" Color="#FF2D2D2D"/>
    <SolidColorBrush x:Key="BorderColor" Color="#FF444444"/>
    <SolidColorBrush x:Key="ButtonBg" Color="#FF3A3A3A"/>


    <!-- ESTILOS COM BASE NAS CORES -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BgColor}"/>
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        <Setter Property="Background" Value="{StaticResource BoxBgColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
    </Style>

</ResourceDictionary>
